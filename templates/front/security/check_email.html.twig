{% extends "front/base.html.twig" %}

{% block body %}
    <div class="h-dvh w-dvw flex items-center justify-center">
        <div class="card shadow w-[450px] flex flex-col items-center p-8 animate-in fade-in duration-400">
            <!-- Success Icon -->
            <div class="w-16 h-16 rounded-full bg-green-100 flex items-center justify-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-nordic-green" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
            </div>

            <h1 class="text-2xl font-bold text-foreground mb-4 text-center">Vérifiez votre email</h1>

            <p class="text-foreground/85 text-center mb-6">
                Un lien de connexion a été envoyé à :
                <br>
                <strong class="text-nordic-green">{{ email }}</strong>
            </p>

            <div class="w-full bg-amber-50 border border-amber-200 rounded-lg p-4 mb-6">
                <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-500 mt-0.5 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <p class="text-sm text-amber-800">
                        Ce lien est valable pendant <strong>10 minutes</strong>. Pensez à vérifier votre dossier spam si vous ne le trouvez pas.
                    </p>
                </div>
            </div>

            <!-- Flash Messages -->
            {% for message in app.flashes('success') %}
                <div class="w-full bg-green-50 border border-green-200 rounded-lg p-3 mb-4">
                    <p class="text-sm text-green-800 text-center">{{ message }}</p>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="w-full bg-red-50 border border-red-200 rounded-lg p-3 mb-4">
                    <p class="text-sm text-red-800 text-center">{{ message }}</p>
                </div>
            {% endfor %}

            <!-- Resend Form -->
            <form action="{{ path('app_resend_email') }}" method="post" class="w-full mb-4">
                <button type="submit" class="w-full px-6 py-3 bg-nordic-green text-white rounded-lg font-medium hover:bg-green-700 transition-colors duration-200 flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Renvoyer l'email
                </button>
            </form>

            <p class="text-xs text-foreground/95 text-center mb-6">
                Maximum 3 renvois en 10 minutes
            </p>

            <!-- Back to login -->
            <a href="{{ path('app_login') }}" class="text-sm text-foreground hover:text-nordic-green transition-colors duration-200 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Retour à la connexion
            </a>
        </div>
    </div>
{% endblock %}
