{% extends "front/base.html.twig" %}

{% block body %}
    <div class="h-dvh w-dvw flex items-center justify-center">
        <div class="card shadow fadeIn w-[450px] h-[400px] flex flex-col items-center justify-between">
            <h1 class="text-2xl py-4 text-nordic-green font-bold">Connectez-vous</h1>
            <form action="" class="flex-col justify-between grow contents">
